<?xml version="1.0" encoding="utf-8"?>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <!-- Begin Tutorial: https://www.youtube.com/watch?v=do4vb0MdLFY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/title_text"
                android:text="@string/title"
                android:textStyle="bold"
                android:textSize="48sp"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:columnCount="2"
                    android:padding="10dp"
                    android:useDefaultMargins="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/jclbutton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/jester_city_limits"
                        android:textSize="24sp"
                        android:contentDescription="@string/jester_city_limits"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/j2button"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/j2"
                        android:textSize="24sp"
                        android:contentDescription="@string/j2"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fastj2button"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/fast_j2"
                        android:textSize="24sp"
                        android:contentDescription="@string/fast_j2"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/kinsbutton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/kins"
                        android:textSize="24sp"
                        android:contentDescription="@string/kins"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/jestapizzabutton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/jesta_pizza"
                        android:textSize="24sp"
                        android:contentDescription="@string/jesta_pizza"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/littlefieldbutton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/littlefield_cafe"
                        android:textSize="24sp"
                        android:contentDescription="@string/littlefield_cafe"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cypressbendbutton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/cypress_bend_cafe"
                        android:textSize="24sp"
                        android:contentDescription="@string/cypress_bend_cafe"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/jcmbutton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:text="@string/jester_city_market"
                        android:textSize="24sp"
                        android:contentDescription="@string/jester_city_market"/>
                </GridLayout>

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/microwave_map_button"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/microwave_map"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="24sp"
                android:contentDescription="@string/microwave_map"/>

            <TextView
                android:id="@+id/view_online_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_menus_online"
                android:layout_gravity="center"
                app:drawableEndCompat="@drawable/ic_open"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>
